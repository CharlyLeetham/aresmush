  <%= line_with_text t('RecursiveRealms.focus_title') %>
  
  <% if @focuses && @focuses.any? %>
  <% @focus.each do |f| %>
    <%= left("%xhTitle:%xn #{f['Focus']}", 80) %>
    <% if f['Description'].present? %>
      <%= "%xhDescription: %xn #{f['Description']}" %>
    <% else %>
      <%= "%xnDescription: %xnNo description available." %>
    <% end %>
    <br>
  <% end %>
<% else %>
  No focuses available.
<% end %>
  <%= footer %>