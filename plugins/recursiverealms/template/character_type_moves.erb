<%= line_with_text t('RecursiveRealms.char_moves_title', :chartype => self.chartypetitle) %>
<%= left("%xhDescription:%xn #{chartype['Descriptor']}", 100) %>

<!-- Output the value of enactor_traits method -->
<%= "rr_traits: #{self.enactor_traits}" %>
<%= "rr_moves: #{self.enactor_moves}" %>

<% self.tiers.each do |tier, attrib| %>
  <%= left("%xh#{tier}:%xn", 100) %>
  <% if attrib && attrib['Moves'] %> 
    <%= left("%xhMoves:%xn", 100) %>
    <% attrib['Moves'].each do |move| %>
      <% move_name_downcase = move['Name'].downcase %>

      <!-- Output the result of move_selected? -->
      <%= "#{move_selected?(move_name_downcase)}" %>

      <% if move_selected?(move_name_downcase) %>
        <%= left("%xh%xg#{move['Name']}:%xn #{move['Description']}", 100) %> <!-- Highlight selected move -->
      <% else %>
        <%= left("%xh#{move['Name']}:%xn #{move['Description']}", 100) %> <!-- Non-highlighted move -->
      <% end %>

      <% move.each do |key, value| %>
        <% unless key == 'Name' or key == 'Description' %>
          <%= "%xh#{key}:%xn #{value}" %>
        <% end %>
      <% end %>
    <% end %>
  <% else %>
    <%= left("%xhNo moves found for #{tier}.%xn", 100) %> <!-- Error handling for missing moves -->
  <% end %>
<% end %>

<%= footer %>