
<%= line_with_text t('RecursiveRealms.rr_command_chartype_title') %>
<% if @chartype.present? %>
  <% @chartype.each do |ct| %> 
    <%= left("%xhTitle:%xn #{ct['Type']}", 30) %> 
    <%= "%xhDescription:%xn #{ct['Descriptor']}" %>
    <%= left("%xhMight:%xn #{ct['Might']}  %xhSpeed:%xn #{ct['Speed']}   %xhIntellect:%xn #{ct['Intellect']}   %xhAdditional Points:%xn #{ct['Additional Points']}", 165) %>
  <% end %>
<% else %>
  No Character Types available.
<% end %>
<%= footer %>
