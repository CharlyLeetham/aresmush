<%= line_with_text t('RecursiveRealms.char_descriptor_title', :chartype => self.chartypetitle) %>
<%= left("%xhDescription:%xn #{chartype['Descriptor']}", 100) %>

<%= "#{selected_descriptor}" %>

<% descriptor_list.each do |descriptor| %>
  <% if descriptor[:selected] %>
    <%= left("%xh%xg#{descriptor[:name]}:%xg%xn", 30) %> <%= left("#{descriptor[:description]}", 70) %>
  <% else %>
    <%= left("%xh#{descriptor[:name]}:%xn", 30) %> <%= left("#{descriptor[:description]}", 70) %>
  <% end %>
<% end %>

<%= footer %>